<?xml version="1.0" encoding="utf-8"?><!-- card_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Card background with shadow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- Outer shadow with start to end fading -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="8dp" /> <!-- Adjust corner radius as needed -->
            <gradient
                android:angle="0"
                android:centerColor="#00000000"
                android:endColor="#00000000"
                android:startColor="#20000000" /><!-- 0,45,90,135,180,225,270,315,360 -->
            <padding
                android:bottom="@dimen/padding_2"
                android:top="@dimen/padding_2" />
        </shape>
    </item>
</layer-list>
