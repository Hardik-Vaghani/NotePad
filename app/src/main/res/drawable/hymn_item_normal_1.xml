<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background shape -->
    <item>
        <shape android:shape="rectangle">
            <!-- Background color for the card -->
            <gradient
                android:angle="0"
                android:type="linear"
                android:centerColor="#20000000"
                android:endColor="#00000000"
                android:startColor="#20000000" />
            <!-- Rounded corners and padding -->
            <corners android:radius="8dp" />
<!--            <padding android:top="0.7dp" android:left="0.9dp" android:right="0dp" android:bottom="2dp" />-->
        </shape>
    </item>

    <!-- Shadow layer -->
    <item
            android:top="0.7dp" android:left="1.5dp" android:right="0dp" android:bottom="2dp"
        >
        <shape android:shape="rectangle">
            <corners android:radius="8dp" /><!-- 0,45,90,135,180,225,270,315,360 -->
            <gradient
                android:type="linear"
                android:angle="0"
                android:centerColor="#F5EEFF"
                android:endColor="#00000000"
                android:startColor="#CAC1EA"/>
        </shape>
    </item>

    <!-- Foreground shape -->
    <item
        android:bottom="2dp" android:left="1.5dp" android:right="0dp" android:top="0.7dp"
        >
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <gradient
                android:type="linear"
                android:angle="0"
                android:centerColor="@color/white"
                android:endColor="#00000000"
                android:startColor="#E0F3FF"/>
        </shape>
    </item>
</layer-list>